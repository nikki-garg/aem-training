<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    cq:dialogMode="floating"
    jcr:primaryType="nt:unstructured"
    jcr:title="Knowledge Resources"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.wcm.components.list.v2.editor]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                jcr:title="Title"
                sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <generaltab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="General"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <id
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="ID"
                                name="./id"/>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Title"
                                name="./title"
                                required="{Boolean}true"/>
                            <buildListUsing
                                granite:class="cq-dialog-dropdown-showhide"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                cq-dialog-dropdown-showhide-target=".listtype-options-showhide-target"
                                fieldLabel="Build List Using"
                                name="./listType"
                                required="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <tags
                                        jcr:primaryType="nt:unstructured"
                                        text="Tags"
                                        value="tags"/>
                                    <docNumber
                                        jcr:primaryType="nt:unstructured"
                                        text="Document Number"
                                        value="docNumber"/>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"/>
                            </buildListUsing>
                            <setTags
                                granite:class="hide list-option-listfrom-showhide-target foundation-layout-util-vmargin"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <heading
                                        granite:class="coral-Heading coral-Heading--4"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/heading"
                                        level="{Long}4"
                                        text="Options for Tags"/>
                                    <well
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                        <items jcr:primaryType="nt:unstructured">
                                            <contentType
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                                                fieldLabel="Content-Type"
                                                name="./contentType"
                                                required="{Boolean}true"
                                                rootPath="/content/cq:tags/content-type"/>
                                            <tagsField
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                                                allowBulkEdit="{Boolean}true"
                                                autocreateTag="{Boolean}true"
                                                fieldLabel="Tags"
                                                name="./tags"
                                                rootPath="/content/cq:tags"/>
                                        </items>
                                    </well>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="tags"/>
                            </setTags>
                            <setDocNumbers
                                granite:class="hide list-option-listfrom-showhide-target foundation-layout-util-vmargin"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <heading
                                        granite:class="coral-Heading coral-Heading--4"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/heading"
                                        level="{Long}4"
                                        text="Options for Tags"/>
                                    <well
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                        <items jcr:primaryType="nt:unstructured">
                                            <documentNumbers
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                fieldLabel="Document Number"
                                                name="./docNumber">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                                            </documentNumbers>
                                        </items>
                                    </well>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="docNumber"/>
                            </setDocNumbers>
                            <maxItems
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                fieldLabel="Max Items"
                                name="./maxItems"
                                required="{Boolean}false"
                                value="5"/>
                        </items>
                    </generaltab>
                    <general
                        jcr:primaryType="nt:unstructured"
                        jcr:title="General 2"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <id
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="ID"
                                name="./id"
                                required="{Boolean}false"/>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Title"
                                name="./title"
                                required="{Boolean}true"/>
                            <buildListUsing
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Build List Using"
                                name="./listType"
                                required="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <tags
                                        jcr:primaryType="nt:unstructured"
                                        text="Tags"
                                        value="Tags"/>
                                    <docNumber
                                        jcr:primaryType="nt:unstructured"
                                        text="Document Number"
                                        value="docNumber"/>
                                </items>
                            </buildListUsing>
                            <contentType
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldLabel="Content-Type"
                                name="./contentType"
                                required="{Boolean}true"
                                rootPath="/content/tags"/>
                            <tagsField
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/tagfield"
                                fieldLabel="Tags"
                                name="./tags"
                                required="{Boolean}false"
                                rootPath="/content/cq:tags"/>
                            <maxItems
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                fieldLabel="Max Items"
                                name="./maxItems"
                                required="{Boolean}false"
                                value="5"/>
                            <documentNumbers
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                fieldLabel="Document Number"
                                name="./docNumber">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                            </documentNumbers>
                        </items>
                    </general>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
